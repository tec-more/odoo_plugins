<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sprint Plan Views -->
        <record id="view_scrum_sprint_plan_list" model="ir.ui.view">
            <field name="name">scrum.sprint_plan.list</field>
            <field name="model">scrum.sprint_plan</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="team_id"/>
                    <field name="iteration_number"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="view_scrum_sprint_plan_form" model="ir.ui.view">
            <field name="name">scrum.sprint_plan.form</field>
            <field name="model">scrum.sprint_plan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="project_id"/>
                            <field name="team_id"/>
                            <field name="iteration_number"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"/>
                            <field name="has_burndown_chart" invisible="1"/>
                        </group>
                        <field name="goal"/>
                        <notebook>
                            <page string="Sprint Backlogs">
                                <field name="sprint_backlog_ids"/>
                            </page>
                            <page string="Daily Meetings">
                                <field name="daily_meeting_ids"/>
                            </page>
                            <page string="Sprint Review Meetings">
                                <field name="sprint_review_meeting_ids"/>
                            </page>
                            <page string="Iteration Review Meetings">
                                <field name="iteration_review_meeting_ids"/>
                            </page>
                            <page string="Burndown Charts">
                                <field name="burndown_chart_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="view_scrum_sprint_plan_search" model="ir.ui.view">
            <field name="name">scrum.sprint_plan.search</field>
            <field name="model">scrum.sprint_plan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="team_id"/>
                    <field name="iteration_number"/>
                    <field name="status"/>
                    <filter name="planning" string="Planning" domain="[('status', '=', 'planning')]"/>
                    <filter name="in_progress" string="In Progress" domain="[('status', '=', 'in_progress')]"/>
                    <filter name="completed" string="Completed" domain="[('status', '=', 'completed')]"/>
                    <filter name="cancelled" string="Cancelled" domain="[('status', '=', 'cancelled')]"/>
                    <group>
                        <filter name="group_by_project" string="Project" domain="[]" context="{'group_by': 'project_id'}"/>
                        <filter name="group_by_team" string="Team" domain="[]" context="{'group_by': 'team_id'}"/>
                        <filter name="group_by_status" string="Status" domain="[]" context="{'group_by': 'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Sprint Plan Action -->
        <record id="action_scrum_sprint_plan" model="ir.actions.act_window">
            <field name="name">Sprint Plans</field>
            <field name="res_model">scrum.sprint_plan</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_scrum_sprint_plan_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new sprint plan
                </p>
            </field>
        </record>
    </data>
</odoo>
