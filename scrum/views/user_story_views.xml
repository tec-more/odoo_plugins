<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- User Story Views -->
        <record id="view_scrum_user_story_list" model="ir.ui.view">
            <field name="name">scrum.user_story.list</field>
            <field name="model">scrum.user_story</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="product_backlog_id"/>
                    <field name="project_id"/>
                    <field name="team_id" optional="hide"/>
                    <field name="status"/>
                    <field name="priority"/>
                    <field name="estimated_story_points"/>
                    <field name="assigned_to"/>
                </list>
            </field>
        </record>

        <record id="view_scrum_user_story_form" model="ir.ui.view">
            <field name="name">scrum.user_story.form</field>
            <field name="model">scrum.user_story</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_sprint_plan" type="object" string="Create Sprint Plan" class="btn-secondary" invisible="not project_id"/>
                        <button name="action_create_sprint_backlog" type="object" string="Create Sprint Backlog" class="btn-secondary" invisible="not project_id"/>
                        <button name="action_parse_to_tasks" type="object" string="Parse to Tasks" class="btn-primary" invisible="not sprint_backlog_id or parse_status == 'parsing'" confirm="This will create sprint tasks from this user story. Continue?"/>
                        <button name="action_view_parsed_tasks" type="object" string="View Tasks" class="btn-secondary" invisible="not sprint_task_ids"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="product_backlog_id"/>
                            <field name="project_id" readonly="1"/>
                            <field name="team_id"/>
                            <field name="status"/>
                            <field name="priority"/>
                            <field name="estimated_story_points"/>
                            <field name="assigned_to"/>
                            <field name="sprint_backlog_id"/>
                        </group>
                        <group string="Parse Status">
                            <field name="parse_status" widget="badge" decoration-success="parse_status == 'done'" decoration-warning="parse_status == 'parsing'" decoration-danger="parse_status == 'error'" decoration-info="parse_status == 'none'"/>
                            <field name="parse_error" invisible="not parse_error"/>
                        </group>
                        <field name="description"/>
                        <field name="acceptance_criteria"/>
                        <notebook>
                            <page string="Sprint Tasks">
                                <field name="sprint_task_ids"/>
                            </page>
                            <page string="Parsed Tasks JSON" invisible="not parsed_tasks_json">
                                <field name="parsed_tasks_json" widget="json" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="view_scrum_user_story_search" model="ir.ui.view">
            <field name="name">scrum.user_story.search</field>
            <field name="model">scrum.user_story</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="product_backlog_id"/>
                    <field name="project_id"/>
                    <field name="team_id"/>
                    <field name="status"/>
                    <field name="assigned_to"/>
                    <filter name="to_do" string="To Do" domain="[('status', '=', 'to_do')]"/>
                    <filter name="in_progress" string="In Progress" domain="[('status', '=', 'in_progress')]"/>
                    <filter name="done" string="Done" domain="[('status', '=', 'done')]"/>
                    <group>
                        <filter name="group_by_product_backlog" string="Product Backlog" domain="[]" context="{'group_by': 'product_backlog_id'}"/>
                        <filter name="group_by_project" string="Project" domain="[]" context="{'group_by': 'project_id'}"/>
                        <filter name="group_by_team" string="Team" domain="[]" context="{'group_by': 'team_id'}"/>
                        <filter name="group_by_status" string="Status" domain="[]" context="{'group_by': 'status'}"/>
                        <filter name="group_by_assigned_to" string="Assigned To" domain="[]" context="{'group_by': 'assigned_to'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- User Story Action -->
        <record id="action_scrum_user_story" model="ir.actions.act_window">
            <field name="name">User Stories</field>
            <field name="res_model">scrum.user_story</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_scrum_user_story_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new user story
                </p>
            </field>
        </record>
    </data>
</odoo>
