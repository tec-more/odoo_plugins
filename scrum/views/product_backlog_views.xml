<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Backlog Views -->
        <record id="view_scrum_product_backlog_list" model="ir.ui.view">
            <field name="name">scrum.product_backlog.list</field>
            <field name="model">scrum.product_backlog</field>
            <field name="arch" type="xml">
                <list string="Product Backlog" decoration-muted="parent_id">
                    <field name="path" string="Path"/>
                    <field name="project_id"/>
                    <field name="level" optional="hide"/>
                    <field name="parent_id" optional="hide"/>
                    <field name="status" widget="badge" decoration-success="status == 'done'" decoration-warning="status == 'in_progress'" decoration-info="status == 'to_do'"/>
                    <field name="priority"/>
                    <field name="estimated_story_points"/>
                    <field name="total_story_points"/>
                </list>
            </field>
        </record>

        <record id="view_scrum_product_backlog_form" model="ir.ui.view">
            <field name="name">scrum.product_backlog.form</field>
            <field name="model">scrum.product_backlog</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_parse_requirement" type="object" string="Parse Requirement" class="btn-primary" invisible="not requirement_file or parse_status == 'parsing'" confirm="This will create user stories from the uploaded file. Continue?"/>
                        <button name="action_view_parsed_stories" type="object" string="View User Stories" class="btn-secondary" invisible="not user_story_ids"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="status"/>
                                <field name="priority"/>
                                <field name="estimated_story_points"/>
                                <field name="total_story_points" readonly="1"/>
                            </group>
                            <group>
                                <field name="description" nolabel="1"/>
                            </group>
                        </group>
                        <group string="Requirement File">
                            <field name="requirement_file" filename="requirement_filename"/>
                            <!-- <field name="requirement_filename" invisible="not requirement_file"/> -->
                            <field name="parse_status" widget="badge" decoration-success="parse_status == 'done'" decoration-warning="parse_status == 'parsing'" decoration-danger="parse_status == 'error'" decoration-info="parse_status == 'none'"/>
                            <field name="parse_error" invisible="not parse_error"/>
                        </group>
                        <notebook>
							<page string="Sub Product Backlog">
								<field name="child_ids"/>
							</page>
                            <page string="User Stories">
                                <field name="user_story_ids"/>
                            </page>
                            <page string="Parsed Stories JSON" invisible="not parsed_stories_json">
                                <field name="parsed_stories_json" widget="json" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="view_scrum_product_backlog_search" model="ir.ui.view">
            <field name="name">scrum.product_backlog.search</field>
            <field name="model">scrum.product_backlog</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="status"/>
                    <filter name="to_do" string="To Do" domain="[('status', '=', 'to_do')]"/>
                    <filter name="in_progress" string="In Progress" domain="[('status', '=', 'in_progress')]"/>
                    <filter name="done" string="Done" domain="[('status', '=', 'done')]"/>
                    <group>
                        <filter name="group_by_project" string="Project" domain="[]" context="{'group_by': 'project_id'}"/>
                        <filter name="group_by_status" string="Status" domain="[]" context="{'group_by': 'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Product Backlog Action -->
        <record id="action_scrum_product_backlog" model="ir.actions.act_window">
            <field name="name">Product Backlogs</field>
            <field name="res_model">scrum.product_backlog</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_scrum_product_backlog_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new product backlog
                </p>
            </field>
        </record>
    </data>
</odoo>
